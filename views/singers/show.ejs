<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <header>
      <h1><%=singer.name%>'s Profile</h1>
        <nav>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/singers">Singer Index</a>
                </li>
            </ul>
      </nav>
    </header>
    <main>
        <section>
            <h2>Singer Info:</h2>
                <ul>
                    <li>Name: <%=singer.name%></li>
                </ul>
      </section>
      <section>
             <a href="/singers/<%=singer._id%>/edit">Edit</a>
      </section>
      <section>
            <h2>songs Written By This singer</h2>
            <ul>
                <% for (let i = 0; i < singer.songs.length; i++) {%>
                    <li><a href="/songs/<%=singer.songs[i]._id%>"><%=singer.songs[i].title%></a></li>
            <% } %>
            </ul>
      </section>

      <section>
                <form action="/singers/<%=singer._id%>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                </form>
      </section>
    </main>
  </body>
</html>